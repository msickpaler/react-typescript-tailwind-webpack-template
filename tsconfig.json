{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		// Reactを明示的にインポートしなくてよくなる
		"jsx": "react-jsx",
		"incremental": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"webpack.*.ts"
	]
}